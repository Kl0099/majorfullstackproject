<% layout("layouts/boilerplate") %>

<div class="row mt-3">
  <h1 class="mb-3 mt-3 center">Login For User</h1>
  <div class="col-6 offset-3">
    <form
      action="/login"
      method="POST"
      class="needs-validation mt-5 mb-5"
      novalidate
    >
      <div class="mb-3">
        <label
          for="username"
          class="form-label"
          >Username</label
        >
        <input
          name="username"
          id="username"
          class="form-control"
          required
          type="text"
        />
      </div>

      <div class="mb-3">
        <label
          for="password"
          class="form-label"
          >password</label
        >
        <input
          name="password"
          id="password"
          class="form-control"
          required
          type="text"
        />
      </div>
      <button class="btn-success btn">login</button>
    </form>
  </div>
</div>
