<% layout("layouts/boilerplate") %>

<div class="row mt-3">
  <h1 class="col-6 offset mb-3 mt-3">signup for user</h1>
  <div class="col-6 offset-3">
    <form
      action="/signup"
      method="POST"
      class="needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label
          for="username"
          class="form-label"
          >Username</label
        >
        <input
          name="username"
          id="username"
          class="form-control"
          required
          type="text"
        />
      </div>
      <div class="mb-3">
        <label
          for="email"
          class="form-label"
          >Email</label
        >
        <input
          name="email"
          id="email"
          class="form-control"
          required
          type="text"
        />
      </div>
      <div class="mb-3">
        <label
          for="password"
          class="form-label"
          >password</label
        >
        <input
          name="password"
          id="password"
          class="form-control"
          required
          type="text"
        />
      </div>
      <button class="btn-success btn">Sign Up</button>
    </form>
  </div>
</div>
